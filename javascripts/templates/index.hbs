{{#if currentUser}}
{{#if currentUser.confirmed}}
{{else}}
<div class="alert alert-info">
	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
	<div class="container">
		<label for="confirmEmail">Email Confirmation</label>
		<p class="help-block">It seems like you haven't confirmed your email yet.</p>
		<button type="button" class="btn btn-default">Send another confirmation</button>
	</div>
</div>
{{/if}}
{{#if currentUser.list}}
<div class="content">
	<div class="container">
		<div class="wrapper">
			<h1 class="text-center"><a href="">{{currentUser.list.Name}}</a></h1>
			<div class="message">
				<div class="message-body">
					<p>I see you.</p>
				</div>
				<div class="message-datetime">
					Sent just now
				</div>
			</div>
			<div class="message">
				<div class="message-body">
					<p>Hi, my name is Bob!</p>
				</div>
				<div class="message-datetime">
					Sent Thursday, July 4th, 2014
				</div>
			</div>
			<div class="message">
				<div class="message-body">
					<p>This is a message that I can send to people.</p>
				</div>
				<div class="message-datetime">
					Sent Friday, July 5th, 2014
				</div>
			</div>
		</div> 
	</div>
</div>		
<div class="content send-broadcast">
	<div class="container">
		<div class="wrapper">
			<form role="form" id="form-send-broadcast">
				<div class="form-group">
					<div class="input-group">
						<input name="message" type="text" class="form-control input-lg" id="broadcastMessage">
						<span class="input-group-btn">
							<button class="btn btn-default btn-lg" type="button">Send</button>
						</span>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
{{else}}
<div class="wrapper">
	<h1>Create a List</h1>
	<form role="form" id="form-create-list">
		<div class="form-group">
			<label for="name">List Name</label>
			<input name="name" type="text" class="form-control" id="listName">
		</div>
		<button type="submit" class="btn btn-default">Create</button>
	</form>
</div>
{{/if}}

